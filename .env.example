# Enhanced Base API v2.0 - Environment Configuration
# Copy this file to .env and modify as needed

# ====================
# SERVER CONFIGURATION
# ====================
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1
APP_NAME=Sawit Base API
APP_VERSION=2.0.0

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ====================
# CORS CONFIGURATION
# ====================
CORS_ORIGIN=*
# Untuk production, gunakan format: https://domain1.com,https://domain2.com

# ====================
# LOGGING CONFIGURATION
# ====================
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=logs/app.log

# ====================
# CACHING CONFIGURATION
# ====================
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# ====================
# API KEYS
# ====================
# GEMINI_API_KEY=your_gemini_api_key_here

# ====================
# FEATURE FLAGS (true/false)
# ====================
FEATURE_RATE_LIMIT=true
FEATURE_HELMET=true
FEATURE_CORS=true
FEATURE_COMPRESSION=true
FEATURE_LOGGING=true
FEATURE_CACHING=true
FEATURE_VALIDATION=true
FEATURE_HEALTH_CHECK=true
FEATURE_SWAGGER=false
